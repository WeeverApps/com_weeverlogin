<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0" method="upgrade">

	<name>Weever Login</name>
	<creationDate>2012-05-31</creationDate>
	<author>Robert Gerald Porter</author>
	<authorEmail>rob@weeverapps.com</authorEmail>
	<authorUrl>http://www.weeverapps.com/</authorUrl>
	<copyright>(c) 2012 Weever Apps Inc.</copyright>
	<license>GPLv3</license>
	<version>0.2</version>
	<releaseType>Beta</releaseType>
	<description>Joomla login component for Weever Apps.</description>
	
	<administration>
	
		<menu link="com_weeverlogin" img="components/com_weever/assets/icons/icon-16-weever_menu_logo.png">Weever Login Settings</menu>
		
		<files folder="admin">
		
			<filename>weeverlogin.php</filename>
			<filename>index.html</filename>
			<filename>controller.php</filename>
			<folder>assets</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>languages</folder>
		
		</files>
		
		<languages folder="admin/languages">
		
			<language tag="en-GB">en-GB/en-GB.com_weeverlogin.ini</language>
			
		</languages>
	
	</administration>

	<files folder="site">
	
		<filename>weeverlogin.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>views</folder>
		<folder>tables</folder>
	  
	</files>
	
	<plugins>
		<plugin plugin="weever_cors" group="system" />
		<plugin plugin="weever_authenticate" group="user" />
	</plugins>
	
	<installfile>install.1.5.php</installfile>
	<uninstallfile>uninstall.1.5.php</uninstallfile>

</install>